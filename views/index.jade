extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2.text-center= title
        //- for name in errors
        //-   h4.display-4.m-b-2.text-center= name['msg']
        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='name') First name:
            input#first_name.form-control(type='text', placeholder='Name', name='name')
            
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')

          div.form-group
            label(for='pwmt') Re-Enter Password:
            input#pw.form-control(type='password' name='passwordmatch')

            div.form-group
            button.btn.btn-info.form-control(type='submit') Signup